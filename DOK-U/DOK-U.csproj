      </Compile>
      <Compile Update="Forms\MainForm.cs">
        <SubType>Form</SubType>
      </Compile>
      <Compile Update="Forms\RecoverPasswordForm.cs">
        <SubType>Form</SubType>
      </Compile>
    </ItemGroup>

</Project>